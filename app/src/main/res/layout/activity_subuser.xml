<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="32dp">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ikon_back"/>

                    <TextView
                        android:id="@+id/make_selection_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_black"
                        android:text="@string/make_selection"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="35sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/make_selection_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="@string/subuser_desc"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/make_selection_manual_box"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/lightWhite"
                    android:padding="10dp">


                    <ImageView
                        android:id="@+id/manual_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ikon_listsubuser" />


                    <TextView
                        android:id="@+id/manual_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:layout_toEndOf="@id/manual_icon"
                        android:fontFamily="@font/muli"
                        android:text="@string/subuser_list"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/manual_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/manual_title"
                        android:layout_toEndOf="@id/manual_icon"
                        android:fontFamily="@font/muli"
                        android:text="@string/subuser_list_desc"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/showButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/make_selection_sms_box"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightWhite"
                    android:padding="10dp">


                    <ImageView
                        android:id="@+id/mobile_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ikon_addsubuser" />


                    <TextView
                        android:id="@+id/mobile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:layout_toEndOf="@id/mobile_icon"
                        android:fontFamily="@font/muli"
                        android:text="@string/subuser_add"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/mobile_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mobile_title"
                        android:layout_toEndOf="@id/mobile_icon"
                        android:fontFamily="@font/muli"
                        android:text="@string/subuser_add_desc"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/addSubUserButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>