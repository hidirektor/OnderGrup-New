<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.Screens.Log.Maintenance.MaintenanceLog"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_inapp" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignStart="@id/logoImageView"
            android:layout_alignTop="@id/logoImageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ikon_back"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/startSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerSection"
        app:layout_constraintBottom_toTopOf="@+id/createMaintenanceLog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/fonksiyonlarVeKontrol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_start_dark"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/functionsandcontrol"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/platformMontaj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_mid"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/platformmontaj"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/makaslar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_end"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/makaslar"
                    android:textSize="12sp"
                    android:textColor="@color/editTextTopColor"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center_horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/genel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_start"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/genel"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/hidrolik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_mid"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/hidroliksistem"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/elektrik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_end"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/elektriksistemi"
                    android:textSize="12sp"
                    android:textColor="@color/editTextTopColor"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/finalRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center_horizontal"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/kilavuzVeEtiket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_start"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/kilavuzveetiket"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/sase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_mid"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/sase"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>
                <Button
                    android:id="@+id/aciklamaNot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_filter_end"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/aciklamanot"
                    android:textSize="12sp"
                    android:textColor="@color/editTextTopColor"
                    android:textAllCaps="false"
                    android:shadowColor="@android:color/transparent"/>

            </LinearLayout>
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/maintenance_milestone"
                android:fontFamily="@font/gilroy_bold"
                android:background="@drawable/background_error_cause"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/maintenance_status"
                android:fontFamily="@font/gilroy_bold"
                android:background="@drawable/background_error_solution"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            </TableLayout>

        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/createMaintenanceLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text="@string/createmaintenance"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/button_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>