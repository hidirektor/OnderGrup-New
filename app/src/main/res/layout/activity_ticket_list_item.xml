<!-- res/layout/list_item_ticket.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_grey"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ticketTitle"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Title"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/showTicketDetails"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ikon_next_2"
            app:tint="@color/gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ticketSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ticketCreatedDate"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="22/08/2024 12:45:04"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/ticketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textAllCaps="false"
            android:textColor="@color/softgreen"
            android:background="@drawable/button_main"/>
    </LinearLayout>

</LinearLayout>